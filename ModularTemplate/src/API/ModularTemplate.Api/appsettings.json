{
  "Application": {
    "Name": "ModularTemplate",
    "DisplayName": "Modular Template API",
    "ShortName": "modular-template",
    "DatabaseName": "modulartemplate"
  },
  "ConnectionStrings": {
    "Database": "Host=localhost;Database=modulartemplate;Username=postgres;Password=postgres",
    "Cache": "localhost:6379"
  },
  "Features": {
    "Infrastructure": {
      "Outbox": true,
      "Inbox": true,
      "Emails": true,
      "CdcEvents": true,
      "BackgroundJobs": true
    },
    "Messaging": {
      "Outbox": {
        "IntervalInSeconds": 10,
        "BatchSize": 20,
        "MaxRetries": 5
      },
      "Inbox": {
        "IntervalInSeconds": 10,
        "BatchSize": 20,
        "MaxRetries": 5
      },
      "Sqs": {
        "QueueUrl": "",
        "PollingIntervalSeconds": 5,
        "MaxMessages": 10,
        "VisibilityTimeoutSeconds": 30
      }
    }
  },
  "Authentication": {
    "KeycloakBaseUrl": "http://localhost:8080",
    "RequireHttpsMetadata": false
  },
  "Caching": {
    "DefaultExpirationMinutes": 5
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.CorrelationId"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "System": "Warning",
        "Quartz": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}      {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/modulartemplate-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] [{RequestId}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId",
      "WithCorrelationId"
    ],
    "Properties": {
      "Application": "ModularTemplate"
    }
  },
  "AllowedHosts": "*"
}
