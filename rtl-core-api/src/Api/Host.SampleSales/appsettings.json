{
  "Application": {
    "Name": "Rtl.Core.SampleSales",
    "DisplayName": "SampleSales API",
    "ShortName": "samplesales-api",
    "DatabaseName": "samplesales"
  },
  "ConnectionStrings": {
    "Database": "Host=localhost;Database=sample;Username=postgres;Password=postgres",
    "Cache": "localhost:6379"
  },
  "Authentication": {
    "TenantId": "your-azure-ad-tenant-id",
    "Audience": "api://your-app-client-id",
    "RequireHttpsMetadata": true
  },
  "Features": {
    "Infrastructure": {
      "Outbox": true,
      "Inbox": true,
      "Emails": true,
      "CdcEvents": true,
      "BackgroundJobs": true
    },
    "Module": {
      "CatalogV2Pagination": true,
      "BulkCreateProducts": false
    }
  },
  "Messaging": {
    "Outbox": {
      "IntervalInSeconds": 10,
      "BatchSize": 20,
      "MaxRetries": 5
    },
    "Inbox": {
      "IntervalInSeconds": 10,
      "BatchSize": 20,
      "MaxRetries": 5
    },
    "AwsMessaging": {
      "EventBusName": "",
      "EventSource": "",
      "SqsQueueUrl": "",
      "PollingIntervalSeconds": 5,
      "MaxMessages": 10,
      "VisibilityTimeoutSeconds": 30
    }
  },
  "Caching": {
    "DefaultExpirationMinutes": 5
  },
  "HealthChecks": {
    "OutboxLag": {
      "DegradedThresholdSeconds": 60,
      "UnhealthyThresholdSeconds": 300,
      "DegradedCountThreshold": 100,
      "UnhealthyCountThreshold": 1000
    },
    "InboxLag": {
      "DegradedThresholdSeconds": 60,
      "UnhealthyThresholdSeconds": 300,
      "DegradedCountThreshold": 100,
      "UnhealthyCountThreshold": 1000
    },
    "SqsQueueDepth": {
      "QueueUrl": "",
      "DegradedThreshold": 1000,
      "UnhealthyThreshold": 10000,
      "IncludeDeadLetterQueue": true,
      "DeadLetterQueueUrl": "",
      "DeadLetterQueueUnhealthyThreshold": 1
    },
    "ModuleDefaults": {
      "OutboxDegradedThresholdSeconds": 60,
      "OutboxUnhealthyThresholdSeconds": 300,
      "OutboxDegradedCountThreshold": 50,
      "OutboxUnhealthyCountThreshold": 500
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*"
}
